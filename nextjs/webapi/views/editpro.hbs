</head>

<body class="app sidebar-mini rtl">
  <!-- Navbar-->
  <header class="app-header">
    <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar"
      aria-label="Hide Sidebar"></a>
    <!-- Navbar Right Menu-->
    <ul class="app-nav">
      <!-- User Menu-->
      <li><a class="app-nav__item" href="/index.html"><i class='bx bx-log-out bx-rotate-180'></i> </a>
      </li>
    </ul>
  </header>
  <!-- Sidebar menu-->
  <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
  <aside class="app-sidebar">
    <div class="app-sidebar__user"><img class="app-sidebar__user-avatar" src="../assets/img/logo5.png" width="300px"
        alt="User Image">
      <div>
        <p class="app-sidebar__user-name"><b>Toto</b></p>
        <p class="app-sidebar__user-designation">Chào mừng bạn trở lại</p>
      </div>
    </div>
    <hr>
    <ul class="app-menu">
        <li><a class="app-menu__item active" href="index.html"><i class='app-menu__icon bx bx-tachometer'></i><span
              class="app-menu__label">Bảng điều khiển</span></a></li>
  
        <li>
          <a class="app-menu__item" href="catalog.html">
            <i class='app-menu__icon bx bx-purchase-tag-alt'></i>
            <span class="app-menu__label">Quản lý danh mục</span>
          </a>
        </li>
        <li>
          <a class="app-menu__item" href="product.html">
            <i class='app-menu__icon bx bx-purchase-tag-alt'></i>
            <span class="app-menu__label">Quản lý sản phẩm</span>
          </a>
        </li>
      </ul>
  </aside>
  <main class="app-content">
    <div class="app-title">
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">Danh sách sản phẩm</li>
        <li class="breadcrumb-item"><a href="#">Thêm sản phẩm</a></li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <h3 class="tile-title">Sửa sản phẩm</h3>
          <div class="tile-body">
            <form class="row"  action="/listpro/edit" method="post" enctype="multipart/form-data">
              {{!-- <div class="form-group col-md-3">
                <label class="control-label">Mã sản phẩm </label>
                <input class="form-control" type="number" placeholder="">
              </div> --}}
              <div class="form-group col-md-3">
                <label class="control-label">Tên sản phẩm</label>
                <input class="form-control" type="text" name="name" value="{{product.name}}">
              </div>
               {{!-- <label for="">Hình ảnh</label> --}}
              {{!-- <input type="file" name = "img" id="" value="{{product.img}}" > --}}
                  <div class="form-group col-md-3">
                      <label class="control-label">Hình ảnh hiện tại</label><br>
                      <img src="/images/{{product.img}}" alt="Hình ảnh sản phẩm" width="50px">
                  </div>
                  <input type="hidden" name="imgOld" value="{{product.img}}">
                  <div class="form-group col-md-3">
                      <label class="control-label">Hình ảnh mới</label>
                      <input type="file" name="img" id="">
                  </div>
              <div class="form-group col-md-3">
                <label class="control-label">Giá bán</label>
                <input class="form-control" type="text" name="price" value="{{product.price}}">
              </div>
               <div class="form-group col-md-3">
                <label class="control-label">Số lượng</label>
                <input class="form-control" type="text" name="quantity" value="{{product.quantity}}">
              </div>
              <div class="form-group col-md-3">
                <label class="control-label">Mô tả</label>
                <input class="form-control" type="text" name="description" value="{{product.description}}">
              </div>
              <input type="hidden" name="id" value="{{product._id}}">
              <a href=""><input type="submit" class="btn btn-primary" value="Sửa"></a>
             </form>
          </div>
          {{!-- <button class="btn btn-save" type="button">Lưu lại</button>
          <a class="btn btn-cancel" href="qlsanpham.html">Hủy bỏ</a> --}}
        </div>
  </main>
<script src="./js/product.js"></script>
</body>

</html>